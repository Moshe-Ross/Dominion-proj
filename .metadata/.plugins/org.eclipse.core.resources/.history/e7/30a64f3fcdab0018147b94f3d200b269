public class Treasure extends Card{

	public class copper extends Treasure {
		public copper(){
			cost = 0;
			value = 1;

			//			private File srcImg = new File("/dominion/src/dominion.images/copper.png");
			//			private Image img = new ImageIO.read(srcImg);	

			victoryPoint = 0;
		}
	}

	public class silver extends Treasure {
		public silver(){
			cost = 3;
			value = 2;

			//		private File srcImg = new File("/dominion/src/dominion.images/silver.png");
			//		private Image img = new ImageIO.read(srcImg);	

			victoryPoint = 0;
		}
	}

	public class gold extends Treasure {

		public gold(){
			cost = 6;
			value = 3;

			//		private File srcImg = new File("/dominion/src/dominion.images/gold.png");
			//		private Image img = new ImageIO.read(srcImg);	

			victoryPoint = 0;
		}	

	}

}
