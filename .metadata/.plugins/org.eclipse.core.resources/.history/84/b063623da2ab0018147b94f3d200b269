package dominion;
import java.awt.Image;
import java.io.File;
import javax.imageio.ImageIO;

public abstract class ResourceCard extends Card{
	private static int value;
	
	public void copper(){
		super.cost = 0;
		value = 1;

//		private File srcImg = new File("/dominion/src/dominion.images/copper.png");
//		private Image img = new ImageIO.read(srcImg);	
	}
	
	public void silver(){
		super.cost = 3;
		value = 2;

//		private File srcImg = new File("/dominion/src/dominion.images/silver.png");
//		private Image img = new ImageIO.read(srcImg);	
	}
	
	public void gold(){
		super.cost = 6;
		value = 3;

//		private File srcImg = new File("/dominion/src/dominion.images/gold.png");
//		private Image img = new ImageIO.read(srcImg);	
	}	
	

	public int getValue() {
		return value;
	}

}
